<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OttPlayer Lite"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/urlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:text="https://my.teleelevidenie.com/m3u8/ott_navigator/hls_custom/23101/oU8yua6UQkz8NpRQAU"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/btnLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/urlInput"
        android:layout_marginTop="8dp"
        android:text="ZaÅ‚aduj z URL" />

    <Button
        android:id="@+id/btnFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoad"
        android:layout_marginTop="8dp"
        android:text="Wybierz plik .m3u"
        android:backgroundTint="#4CAF50" />

    <Spinner
        android:id="@+id/groupSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFile"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:padding="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/groupSpinner"
        android:layout_above="@+id/btnSettings"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Ustawienia"
        android:backgroundTint="#444444" />

</RelativeLayout>
