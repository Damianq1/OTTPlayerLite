<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ustawienia i Moduły"
            android:textColor="#FFBB00"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:id="@+id/modulesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginVertical="10dp" />

        <LinearLayout
            android:id="@+id/ipContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDeviceIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="IP Urządzenia: 0.0.0.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Port sterowania ADB:"
                android:textColor="#AAAAAA"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/editAdbPort"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFBB00"
                android:text="5555" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="ZAPISZ I WRÓĆ"
            android:backgroundTint="#FFBB00"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>
