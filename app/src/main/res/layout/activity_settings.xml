<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tryb User-Agent"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/groupUserAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radioDefault" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Domyślny (OTT)" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioVLC" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VLC Player" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioChrome" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chrome (Android)" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioCustom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Własny" android:textColor="#FFFFFF"/>
        </RadioGroup>

        <EditText
            android:id="@+id/editCustomUA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wpisz własny User-Agent"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:layout_marginTop="8dp"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tryb Odtwarzacza"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/groupPlayerMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radioAuto" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Automatyczny" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioExo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tylko ExoPlayer" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioExternal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Zewnętrzny (VLC/MX)" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioWeb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Silnik Web (Chromium)" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioWeb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Silnik Web (Chromium)" android:textColor="#FFFFFF"/>
            <RadioButton android:id="@+id/radioWeb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Silnik Web (Chromium)" android:textColor="#FFFFFF"/>
        </RadioGroup>

    </LinearLayout>
</ScrollView>
