<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ultimate_dark"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USTAWIENIA ULTIMATE"
        android:textColor="@color/ultimate_gold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/editHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL Listy M3U"
        android:textColor="@color/white"
        android:textColorHint="#666666"
        android:background="@drawable/settings_button_bg"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZAPISZ I ODŚWIEŻ"
        android:backgroundTint="@color/ultimate_gold"
        android:textColor="@color/black" />

</LinearLayout>
