<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ultimate_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ULTIMATE CONTROL CENTER"
            android:textColor="@color/ultimate_gold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ustawienia Zasilania"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />

        <SeekBar android:id="@+id/timerSeekBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="240" />
        <TextView android:id="@+id/timerValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/ultimate_gold" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/ultimate_gray" android:layout_marginVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sieć i Proxy"
            android:textColor="@color/white" />

        <TextView android:id="@+id/vpnStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/white" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchProxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Użyj Proxy"
            android:textColor="@color/white" />

        <EditText android:id="@+id/proxyHost" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Host" android:textColorHint="@color/ultimate_gray" android:textColor="@color/white"/>
        <EditText android:id="@+id/proxyPort" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Port" android:textColorHint="@color/ultimate_gray" android:textColor="@color/white"/>

        <Button android:id="@+id/btnSaveProxy" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="ZAPISZ I WRÓĆ" android:layout_marginTop="20dp" android:backgroundTint="@color/ultimate_gold" android:textColor="@color/black"/>

    </LinearLayout>
</ScrollView>
