<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ultimate_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USTAWIENIA ULTIMATE"
            android:textColor="@color/ultimate_gold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/vpnStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sprawdzanie VPN..."
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/ultimate_gray" android:layout_marginBottom="20dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchProxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UÅ¼ywaj Proxy (Anti-Freeze+)"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/proxyHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Host (np. 127.0.0.1)"
            android:textColor="@color/white"
            android:background="@drawable/settings_button_bg"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/proxyPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Port (np. 8080)"
            android:textColor="@color/white"
            android:background="@drawable/settings_button_bg"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnSaveProxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZAPISZ USTAWIENIA SIECIOWE"
            android:backgroundTint="@color/ultimate_gold"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>
