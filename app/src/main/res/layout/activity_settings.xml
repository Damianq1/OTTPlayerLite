<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz silnik odtwarzania:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupEngine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioMedia3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media3 (Standardowy)"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioVlc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LibVLC (Kompatybilny)"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Chromium (Awaryjny)"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Zapisz ustawienia" />

</LinearLayout>
