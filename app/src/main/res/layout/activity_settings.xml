<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#121212">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONFIGURACJA PLAYLISTY"
        android:textColor="#FFBB00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wklej link M3U / URL Portalu"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:backgroundTint="#FFBB00"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Użytkownik / MAC (opcjonalnie)"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:backgroundTint="#FFBB00"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hasło (opcjonalnie)"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:backgroundTint="#FFBB00"
        android:inputType="textPassword"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ZAPISZ I ODŚWIEŻ"
        android:backgroundTint="#FFBB00"
        android:textColor="#000000"
        android:textStyle="bold"/>
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wersja: Ultimate Player 1.0"
        android:textColor="#444444"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>
