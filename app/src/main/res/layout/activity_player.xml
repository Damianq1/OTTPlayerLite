<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false" />

        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"
            android:background="#88000000"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">
            <TextView android:id="@+id/txtBitrate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00FF00" android:textSize="10sp" />
            <TextView android:id="@+id/txtResolution" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF" android:textSize="10sp" />
            <TextView android:id="@+id/txtFps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00FF00" android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="20dp"
            android:text="â— REC"
            android:textColor="#FF0000"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/channelOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#CC000000"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">
            <TextView android:id="@+id/channelName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFBB00" android:textSize="24sp" />
            <TextView android:id="@+id/epgTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF" />
            <ProgressBar android:id="@+id/epgProgress" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginTop="8dp" />
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/quickMenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F2121212">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/quickRecyclerView" android:layout_width="match_parent" android:layout_height="match_parent" />
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
