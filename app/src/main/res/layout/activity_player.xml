<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        android:visibility="gone" />

    <org.videolan.libvlc.util.VLCVideoLayout
        android:id="@+id/vlcLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/controlsPanel"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="#E6121212"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFBB00"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentChannelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nazwa Kanału"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtProgramDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ładowanie informacji EPG..."
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:maxLines="6"
            android:ellipsize="end" />

        <ProgressBar
            android:id="@+id/epgProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="15dp"
            android:progress="0"
            android:progressTint="#FFBB00" />

        <Space android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZAPLANUJ NAGRANIE"
            android:backgroundTint="#FFBB00"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAGRYWAJ TERAZ"
            android:backgroundTint="#FF4444"
            android:layout_marginBottom="10dp" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/btnPrev" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="PREV" android:layout_marginEnd="5dp"/>
            <Button android:id="@+id/btnNext" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="NEXT" android:layout_marginStart="5dp"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
