<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
    <LinearLayout 
        android:id="@+id/statsContainer" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="top|end" 
        android:layout_margin="10dp" 
        android:background="#88000000" 
        android:orientation="vertical" 
        android:padding="5dp" 
        android:visibility="gone"> 
        <TextView android:id="@+id/txtBitrate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00FF00" android:textSize="12sp" android:text="Bitrate: 0 Mbps" /> 
        <TextView android:id="@+id/txtResolution" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FFFFFF" android:textSize="12sp" android:text="Res: 0x0" /> 
        <TextView android:id="@+id/txtFps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00FF00" android:textSize="12sp" android:text="FPS: 0" /> 
    </LinearLayout>
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false" />

        <LinearLayout
            android:id="@+id/channelOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#E6000000"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/channelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFBB00"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/epgTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/epgProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:progressDrawable="@android:drawable/progress_horizontal" />
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/quickMenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F2121212">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/quickRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" />
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
