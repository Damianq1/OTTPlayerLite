<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Ultimate Player"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity android:name="com.ottplayerlite.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ottplayerlite.PlayerActivity" android:screenOrientation="landscape" />
        <activity android:name="com.ottplayerlite.EpgActivity" android:screenOrientation="landscape" />
        <activity android:name="com.ottplayerlite.SettingsActivity" android:screenOrientation="landscape" />

    </application>
</manifest>
